@using Entities
@using Bussines

@inject NavigationManager NavManger

<EditForm Model="oCategory">
    <div class="form-group">
        <label>Id Categoría : </label>
        <InputText class="form-control" @bind-Value="oCategory.CategoryId"></InputText>
    </div>
    <div class="form-group">
        <label>Nombre Categoría : </label>
        <InputText class="form-control" @bind-Value="oCategory.CategotyName"></InputText>
    </div>
    <input type="button" value="Actualizar Categoría" @onclick="UpdateCategory" class="btn btn-primary" />
</EditForm>

@code {

    [Parameter]
    public string IdCategory { get; set; }

    CategoryEntity oCategory ;

    protected override async Task OnInitializedAsync()
    {
        oCategory = B_Category.GetItemById(IdCategory);
    }


    public void UpdateCategory()
    {
        B_Category.UpdateItem(oCategory);
        NavManger.NavigateTo("category/list");
    }

}
