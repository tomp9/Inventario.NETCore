    <thead>
        <tr>
            <th> Id Categoría</th>
            <th> Nombre</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in categories)
        {
        <tr>
            <th>@category.CategoryId</th>
            <th>@category.CategotyName</th>
            <th><a href="category/update/@category.CategoryId">Editar</a></th>
