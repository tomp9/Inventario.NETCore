<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Inventory</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/storage/create" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Crear Almacenamiento
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/warehouse/list">
                <span class="oi oi-plus" aria-hidden="true"></span> Bodegas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/category/list">
                <span class="oi oi-graph" aria-hidden="true"></span> Categorías
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/product/list">
                <span class="oi oi-plus" aria-hidden="true"></span> Productos
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/inout/create">
                <span class="oi oi-plus" aria-hidden="true"></span> Entradas y Salidas
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
